[Unit]
Description=Libvirt DBus Service

[Service]
BusName=org.libvirt
DynamicUser=yes
User=@SYSTEM_USER@
Group=@SYSTEM_USER@
SupplementaryGroups=libvirt
ExecStart=@sbindir@/libvirt-dbus --system

[Install]
Alias=org.libvirt.service
